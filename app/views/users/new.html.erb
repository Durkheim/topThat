<% provide(:title, 'Sign up')%>

<h1>Sign up</h1>
<div class="row">
   <div class="col-md-6 col-md-offset-3">
<%= form_for :user, url: '/users', :html => {:multipart => true} do |f|%>
Username: <%= f.text_field :username, class: 'form-control' %>
Email: <%= f.text_field :email, class: 'form-control' %>
Password: <%= f.password_field :password, class: 'form-control' %>
Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control'  %><br>
Avatar:  <%= f.label :avatar, "Add Avatar"%><br>
    <%= f.file_field :avatar %><br>
<%= f.submit "Submit" , class: "btn btn-primary" %>
<%end%>
  </div>
</div>
