<!DOCTYPE html>
<html>
<head>
  <title>TopThat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="animate.min.css">

</head>
<body>
<!-- Go to www.addthis.com/dashboard to customize your tools -->
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-553987fc5985dd60" async="async"></script>


<div class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <a href="/" class="navbar-brand"><%= image_tag "top_that_logo.png"%></a>
    <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class="collapse navbar-collapse navHeaderCollapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "In Battle", ('/public_arenas/in_battle') %></li>
        <li><%= link_to "Awaiting A Challenger", ('/public_arenas/open') %></li>
        <li><%= link_to "Battles of YesterYear", ('/public_arenas/closed')%></li>
      </ul>
  <% if current_user %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "signed in as #{current_user.username}", "/users/#{current_user.id}"%></li>
        <li><%= link_to "Logout", '/logout', {method: :delete} %></li>
      </ul>
  <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Signup', '/signup' %></li>
        <li><%= link_to 'Login', '/login' %></li>
      </ul>
  <% end %>
    </div>
  </div>
</div>


  <% flash.each do |message_type, msg| %>
        <div class="alert alert-<%= message_type %>"><%= msg %>
        </div>
      <% end %>
  <div id="main-container" class="container">
    <div class="row">
 <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
      </div>
    </div>

<%= yield %>
<br>
<br>

</body>
</html>
